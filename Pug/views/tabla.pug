doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
            rel="stylesheet"
            integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
            crossorigin="anonymous")
        title Clase 10 Backend - Pug
    body 
        main
            h2 Vista de Productos
            if articulos.length > 0
                div(class="table-responsive")
                    table(class="table table-dark")
                        tr
                            th Nombre
                            th Precio
                            th Foto URL
                        each producto in articulos
                            tr
                                td #{producto.title}
                                td #{producto.price}
                                td: img(src="#{producto.thumbnail}")
                                                                              
            else
                h3(class="alert alert-danger") No hay productos
            br  
            a(href="http://localhost:8080/api/productos" class="btn btn-success mt-3 mb-5") Formulario