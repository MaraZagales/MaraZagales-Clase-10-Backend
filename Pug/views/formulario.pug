doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
            rel="stylesheet"
            integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
            crossorigin="anonymous")
        title Clase 10 Backend - Pug
    body 
        main   
            h2 Ingrese Producto
            br
            form(action="http://localhost:8080/api/productos" method="post")
                div(class="form-group")
                    label Nombre
                    input(class="form-control" type="text" name="title")
                div(class="form-group")
                    label Precio
                    input(class="form-control" type="text" name="price")
                div(class="form-group")
                    label Foto URL
                    input(class="form-control" type="text" name="thumbnail")

                button(class="btn btn-success mt-3 mb-5") Enviar

            br
            a(href="http://localhost:8080/api/productos/listado" class="btn btn-success mt-3 mb-5") Productos