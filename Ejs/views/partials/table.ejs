<div class="container">
  <div class="jumbotron">
    <h2>Vista de Productos</h2>

    <% if(articulos.length> 0) { %>
    <div class="table-responsive">
      <table class="table table-dark">
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Foto URL</th>
        </tr>
        <% articulos.forEach(function(art) {%>
        <tr>
          <td><%=art.title%></td>
          <td><%=art.price%></td>
          <td><img src="<%=art.thumbnail%>" alt="<%=art.title%>"></td>
        </tr>
        <%});%>
      </table>
    </div>
    <%} else {%>
    <h3 class="alert alert-danger">No hay productos</h3>
    <% }%>

    <br />
    
      <a href="http://localhost:8080/api/productos" class="btn btn-success mt-3 mb-5">Formulario</a>
   
  </div>
</div>
