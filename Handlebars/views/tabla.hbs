<div class="container">
  <h2>Vista de Productos</h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Foto</th>
    </tr>
  </thead>
  <tbody>
    {{#if listExist}} 
    {{#each list}}    
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.price}}</td>
      <td><img src="{{this.thumbnail}}" alt="{{this.title}}"></td>
    </tr> 
    {{/each}}
    {{/if}}
    {{#else}}
    <h2>No hay productos</h2>
    {{/else}}
    
  </tbody>
</table>

<a href="http://localhost:8080/api/productos" class="btn btn-success mt-3 mb-5">Formulario</a>

</div>